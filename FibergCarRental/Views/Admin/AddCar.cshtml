@model FibergCarRental.Models.Car

<h1>Add New Car</h1>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}
<form asp-controller="Admin" asp-action="AddCar" method="post">
    <div class="mb-3">
        <label for="make" class="form-label">Make</label>
        <input type="text" class="form-control" id="make" name="Make" required />
    </div>
    <div class="mb-3">
        <label for="model" class="form-label">Model</label>
        <input type="text" class="form-control" id="model" name="Model" required />
    </div>
    <div class="mb-3">
        <label for="isAvailable" class="form-label">Available</label>
        <select class="form-control" id="isAvailable" name="IsAvailable">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="imageUrls" class="form-label">Image URLs (one per line)</label>
        <textarea class="form-control" id="imageUrls" name="imageUrls" rows="4" placeholder="Enter image URLs, one per line"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Add Car</button>
    <a asp-action="ManageCars" class="btn btn-secondary">Cancel</a>
</form>