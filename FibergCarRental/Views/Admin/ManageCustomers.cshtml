@model IEnumerable<FibergCarRental.Models.Customer>

<h1>Manage Customers</h1>
<a asp-action="AddCustomer" class="btn btn-success mb-3">Add New Customer</a>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>
                    <a asp-action="EditCustomer" asp-route-id="@customer.Id" class="btn btn-primary btn-sm">Edit</a>
                    <form asp-action="DeleteCustomer" asp-route-id="@customer.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>