@model FibergCarRental.Models.Car

<h1>Edit Car</h1>
<form asp-controller="Admin" asp-action="EditCar" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label for="make" class="form-label">Make</label>
        <input type="text" class="form-control" id="make" name="Make" value="@Model.Make" required />
    </div>
    <div class="mb-3">
        <label for="model" class="form-label">Model</label>
        <input type="text" class="form-control" id="model" name="Model" value="@Model.Model" required />
    </div>
    <div class="mb-3">
        <label for="isAvailable" class="form-label">Available</label>
        <select class="form-control" id="isAvailable" name="IsAvailable">
            <option value="true" selected="@(Model.IsAvailable ? "selected" : "")">Yes</option>
            <option value="false" selected="@(!Model.IsAvailable ? "selected" : "")">No</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="imageUrls" class="form-label">Image URLs (one per line)</label>
        <textarea class="form-control" id="imageUrls" name="imageUrls" rows="4">@string.Join("\n", Model.ImageUrls)</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="ManageCars" class="btn btn-secondary">Cancel</a>
</form>