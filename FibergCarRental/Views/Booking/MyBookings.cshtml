@model IEnumerable<FibergCarRental.Models.Booking>

<h1>My Bookings</h1>

<p><a asp-controller="Booking" asp-action="Logout" class="btn btn-secondary">Logout</a></p>

@if (!Model.Any())
{
    <p class="alert alert-info">You have no bookings at the moment.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Car</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Booking Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Car.Make @booking.Car.Model</td>
                    <td>@booking.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@booking.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>@booking.BookingDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <form asp-action="CancelBooking" asp-controller="Booking" method="post" style="display:inline;">
                            <input type="hidden" name="bookingId" value="@booking.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to cancel this booking?');">Cancel</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}